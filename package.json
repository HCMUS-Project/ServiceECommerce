{
    "name": "grpc-ecommerce",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "gen:proto": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=import_style=commonjs,grpc_js:src/proto_build --js_out=import_style=commonjs,binary:src/proto_build -I ./src/proto ./src/proto/*.proto ./src/proto/**/*.proto",
        "gen:proto_folder": "rm -rf src/proto_build && mkdir -p src/proto_build",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install",
        "generate-schema": "cat src/core/prisma/*.prisma src/*/*.prisma > prisma/schema.prisma",
        "migrate": "npm run generate-schema && prisma migrate dev --preview-feature --name $migrate_name",
        "generate": "prisma generate",
        "wait-for-it": "wait-for-it.sh"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.10.6",
        "@grpc/proto-loader": "^0.7.12",
        "@nestjs-modules/mailer": "^1.11.2",
        "@nestjs/cache-manager": "^2.2.2",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/microservices": "^10.3.7",
        "@nestjs/platform-express": "^10.0.0",
        "@prisma/client": "^5.13.0",
        "@supabase/supabase-js": "^2.42.7",
        "argon2": "^0.40.1",
        "cache-manager": "^5.5.1",
        "cache-manager-redis-store": "^3.0.1",
        "grpc_tools_node_protoc_ts": "^5.3.3",
        "mongoose": "^8.3.1",
        "morgan": "^1.10.0",
        "nestjs-cls": "^4.3.0",
        "nestjs-grpc-exceptions": "^0.2.2",
        "nodemailer": "^6.9.13",
        "prisma": "^5.13.0",
        "protobufjs": "^7.2.6",
        "randomstring": "^1.3.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "grpc-tools": "^1.12.4",
        "husky": "^8.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
