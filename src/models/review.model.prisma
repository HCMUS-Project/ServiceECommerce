model Review {
    id         String  @id @default(uuid())
    product_id String
    user_id    String
    rating     Decimal @commerce_db.Decimal(19, 1)
    review     String

    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    deleted_at DateTime?

    product Product @relation(fields: [product_id], references: [id])
}
